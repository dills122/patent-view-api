{
  "name": "uspto-patents-view-api",
  "version": "0.0.12",
  "description": "An api wrapper for the patent view api run by the uspto",
  "main": "src/index.js",
  "scripts": {
    "test": "mocha -r ts-node/register \"src/**/*.spec.ts\"",
    "build": "tsc -p .",
    "compile": "tsc",
    "clean": "tsc --build --clean && rm -r ./types",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prettier": "prettier --write src/**/*.ts",
    "prepublishOnly": "pnpm build",
    "version": "auto-changelog -p && git add HISTORY.md",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "pnpm lint:fix"
    ],
    "package.json": "prettier --write",
    "*.md": "prettier --write"
  },
  "auto-changelog": {
    "output": "HISTORY.md",
    "template": "keepachangelog",
    "unreleased": true,
    "commitLimit": false
  },
  "keywords": [
    "uspto",
    "patents",
    "patent-view",
    "api-wrapper",
    "inventors",
    "uspto-api-wrapper",
    "patent-api-wrapper",
    "patent-view-api-wrapper"
  ],
  "author": "Dylan Steele",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^5.2.0",
    "@types/got": "^9.6.12",
    "@types/lodash": "^4.14.202",
    "@types/mocha": "^10.0.6",
    "@types/node": "^22.1.0",
    "@types/sinon": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^6.14.0",
    "auto-changelog": "^2.4.0",
    "chai": "^5.2.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^9.0.7",
    "lint-staged": "^15.2.0",
    "mocha": "^11.0.1",
    "prettier": "^3.1.1",
    "sinon": "^19.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "got": "^11.8.2",
    "lodash": "^4.17.21",
    "rxjs": "^7.8.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dills122/patent-view-api"
  },
  "bugs": {
    "url": "https://github.com/dills122/patent-view-api/issues"
  }
}
